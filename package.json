{
  "name": "graph-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@gravity-ui/graph",
    "test": "npm run test --workspace=@gravity-ui/graph",
    "lint": "npm run lint --workspace=@gravity-ui/graph",
    "typecheck": "npm run typecheck --workspace=@gravity-ui/graph",
    "storybook": "npm run storybook --workspace=@gravity-ui/graph-storybook",
    "storybook:build": "npm run storybook:build --workspace=@gravity-ui/graph-storybook"
  },
  "devDependencies": {
    "@gravity-ui/eslint-config": "^3.2.0",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/tsconfig": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
