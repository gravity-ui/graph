{
  "name": "@gravity-ui/graph-monorepo",
  "version": "1.5.0",
  "description": "Modern graph editor component - monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/graph"
  },
  "engines": {
    "yarn": "Please use npm instead of yarn to install dependencies",
    "pnpm": "Please use npm instead of pnpm to install dependencies"
  },
  "scripts": {
    "dev": "npm run storybook",
    "build": "npm run clean && npm run build:graph && npm run build:react",
    "build:graph": "npm run clean:graph && rollup -c --config-package graph && tsc --project packages/graph/tsconfig.json --emitDeclarationOnly && npm run build:graph:umd",
    "build:graph:umd": "rollup -c rollup.config.umd.mjs",
    "build:react": "npm run clean:react && rollup -c --config-package react && tsc --project packages/react/tsconfig.json --emitDeclarationOnly",
    "watch": "rollup -c --watch",
    "typecheck": "tsc -b",
    "typecheck:watch": "tsc -b --watch",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "npm run test -- --watch",
    "test:update": "npm run test -- --updateSnapshot",
    "lint": "eslint \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "ci:storybook:build": "npm run build-storybook",
    "clean": "rm -rf packages/*/dist packages/*/build",
    "clean:graph": "rm -rf packages/graph/dist packages/graph/build",
    "clean:react": "rm -rf packages/react/dist packages/react/build",
    "size": "npm run build && size-limit"
  },
  "size-limit": [
    {
      "path": "packages/graph/dist/index.js",
      "import": "{ Graph }",
      "gzip": true
    },
    {
      "path": "packages/react/dist/index.js",
      "import": "{ GraphCanvas }",
      "gzip": true
    }
  ],
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-typescript": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@chromatic-com/storybook": "^4.1.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@floating-ui/react": "^0.27.13",
    "@gravity-ui/eslint-config": "^3.2.0",
    "@gravity-ui/icons": "^2.15.0",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@gravity-ui/uikit": "^7.19.0",
    "@monaco-editor/react": "^4.6.0",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-links": "^9.1.2",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/react-webpack5": "^9.1.2",
    "@swc/core": "^1.13.3",
    "@swc/jest": "^0.2.39",
    "@testing-library/react": "^16.3.0",
    "@types/intersects": "^2.5.0",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.13",
    "@types/rbush": "^3.0.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "elkjs": "^0.9.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^9.1.2",
    "eslint-stats": "^1.0.1",
    "jest": "^30.0.5",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.0.5",
    "monaco-editor": "^0.52.0",
    "prettier": "^3.0.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.52.5",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.77.1",
    "size-limit": "^11.2.0",
    "storybook": "^9.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "web-worker": "^1.3.0"
  }
}
