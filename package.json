{
  "name": "@gravity-ui/graph-monorepo",
  "version": "1.2.1",
  "private": true,
  "description": "Monorepo for @gravity-ui/graph packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/graph"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "yarn": "Please use npm instead of yarn to install dependencies",
    "pnpm": "Please use npm instead of pnpm to install dependencies"
  },
  "scripts": {
    "build": "wireit",
    "typecheck": "wireit",
    "test": "wireit",
    "lint": "wireit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook -c .storybook -o storybook-static -s .storybook/public",
    "build-storybook": "storybook build",
    "ci:storybook:build": "npm run build-storybook",
    "size": "npm run build && size-limit",
    "build:graph": "npm run build --workspace=packages/graph",
    "build:graph-react": "npm run build --workspace=packages/graph-react",
    "test:graph": "npm run test --workspace=packages/graph",
    "test:graph-react": "npm run test --workspace=packages/graph-react",
    "release:please": "release-please manifest-pr --config-file release-please-config.json --manifest-file .release-please-manifest.json"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/graph:build"
      ]
    },
    "typecheck": {
      "dependencies": [
        "./packages/graph:typecheck"
      ]
    },
    "test": {
      "dependencies": [
        "./packages/graph:test"
      ]
    },
    "lint": {
      "dependencies": [
        "./packages/graph:lint"
      ]
    }
  },
  "size-limit": [
    {
      "path": "packages/graph/dist/index.js",
      "import": "{ Graph }",
      "gzip": true
    }
  ],
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@floating-ui/react": "^0.27.13",
    "@gravity-ui/icons": "^2.15.0",
    "@gravity-ui/uikit": "^7.19.0",
    "@monaco-editor/react": "^4.6.0",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-links": "^9.1.2",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/react-webpack5": "^9.1.2",
    "elkjs": "^0.9.3",
    "eslint-plugin-storybook": "^9.1.2",
    "eslint-stats": "^1.0.1",
    "monaco-editor": "^0.52.0",
    "process": "^0.11.10",
    "sass": "^1.77.1",
    "size-limit": "^11.2.0",
    "storybook": "^9.1.2",
    "ts-node": "^10.9.2",
    "web-worker": "^1.3.0",
    "wireit": "^0.14.9",
    "release-please": "^16.7.1"
  }
}