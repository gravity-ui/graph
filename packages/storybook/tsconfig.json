{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "noEmitOnError": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "jsx": "react",
    "paths": {},
    "composite": true
  },
  "include": [
    "stories/**/*.ts",
    "stories/**/*.tsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
