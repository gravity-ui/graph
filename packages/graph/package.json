{
  "name": "@gravity-ui/graph",
  "version": "1.2.1",
  "description": "Modern graph editor component",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "gravity-ui",
    "graph",
    "graph-editor",
    "flowchart",
    "workflow",
    "node-based",
    "node-editor",
    "block-diagram",
    "data-visualization",
    "canvas",
    "diagram"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/graph",
    "directory": "packages/graph"
  },
  "files": [
    "dist",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "wireit",
    "typecheck": "wireit",
    "test": "wireit",
    "lint": "wireit",
    "copy-styles": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc && npm run copy-styles",
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "typecheck": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json"
      ]
    },
    "test": {
      "command": "jest --passWithNoTests",
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.test.*",
        "jest.config.ts"
      ]
    },
    "lint": {
      "command": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
      "files": [
        "src/**/*.{js,jsx,ts,tsx}",
        ".eslintrc.json"
      ]
    },
    "copy-styles": {
      "command": "copyfiles -u 1 \"src/**/*.css\" dist/",
      "files": [
        "src/**/*.css"
      ],
      "output": [
        "dist/**/*.css"
      ]
    }
  },
  "dependencies": {
    "@preact/signals-core": "^1.5.1",
    "intersects": "^2.7.2",
    "lodash-es": "^4.17.21",
    "rbush": "^3.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-typescript": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@gravity-ui/eslint-config": "^3.2.0",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@swc/core": "^1.13.3",
    "@swc/jest": "^0.2.39",
    "@testing-library/react": "^16.3.0",
    "@types/intersects": "^2.5.0",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.13",
    "@types/rbush": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^30.0.5",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.0.0",
    "typescript": "^5.9.2"
  }
}
