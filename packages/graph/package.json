{
  "name": "@gravity-ui/graph",
  "version": "2.0.0-beta.0",
  "description": "Modern graph editor component - core library with Canvas rendering, state management, and plugins",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "umd": "./dist/graph.umd.js",
  "umd:min": "./dist/graph.umd.min.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "keywords": [
    "gravity-ui",
    "graph",
    "graph-editor",
    "flowchart",
    "workflow",
    "node-based",
    "node-editor",
    "block-diagram",
    "data-visualization",
    "canvas",
    "diagram"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "umd": "./dist/graph.umd.js",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    },
    "./devtools": {
      "types": "./dist/plugins/devtools/index.d.ts",
      "default": "./dist/plugins/devtools/index.js"
    },
    "./minimap": {
      "types": "./dist/plugins/minimap/index.d.ts",
      "default": "./dist/plugins/minimap/index.js"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/graph",
    "directory": "packages/graph"
  },
  "homepage": "https://github.com/gravity-ui/graph#readme",
  "bugs": {
    "url": "https://github.com/gravity-ui/graph/issues"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:types && npm run build:umd",
    "build:esm": "rollup -c rollup.config.mjs",
    "build:umd": "rollup -c rollup.config.umd.mjs",
    "build:types": "tsc --emitDeclarationOnly",
    "watch": "rollup -c rollup.config.mjs --watch",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@preact/signals-core": "^1.5.1",
    "intersects": "^2.7.2",
    "lodash": "^4.17.21",
    "rbush": "^3.0.1",
    "style-observer": "^0.1.2"
  }
}

